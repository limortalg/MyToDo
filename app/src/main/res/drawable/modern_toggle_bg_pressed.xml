<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Pressed state - darker gradient -->
    <gradient
        android:startColor="#357ABD"
        android:endColor="#2C5AA0"
        android:angle="90" />
    
    <!-- Rounded corners -->
    <corners android:radius="18dp" />
    
    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#1E4A7A" />
    
    <!-- Padding -->
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp" />
    
</shape>
