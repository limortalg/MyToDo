<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Track background -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4A90E2"
                android:endColor="#357ABD"
                android:angle="90" />
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="#2C5AA0" />
        </shape>
    </item>
    
    <!-- Slider knob (right position for "Today") -->
    <item android:right="2dp" android:top="2dp" android:bottom="2dp" android:width="40dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#F0F0F0"
                android:angle="90" />
            <corners android:radius="18dp" />
            <stroke android:width="1dp" android:color="#D0D0D0" />
        </shape>
    </item>
    
    <!-- Text labels -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    
</layer-list>
